<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PlatziStore.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PlatziStore"
    Shell.FlyoutBehavior="Disabled"
    Title="PlatziStore"
    xmlns:views="clr-namespace:PlatziStore.Views"
    >

    
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Detalles de producto"
            ContentTemplate="{DataTemplate views:ProductoDetalles}"
            Route="ProductoDetalles" />



</Shell>
